<Window x:Class="FileSizeAnalyzerGUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Exclusion List" FontSize="16" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Foreground="{DynamicResource GlyphBrush}">
                Enter full paths or patterns to exclude from scans. Each entry should be on a new line.
                Use '*' as a wildcard (e.g., C:\Users\*\AppData, *.log, *\node_modules\*).
            </TextBlock>
        </StackPanel>

        <TextBox x:Name="ExclusionsTextBox" Grid.Row="1"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Click="SaveButton_Click" IsDefault="True" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
